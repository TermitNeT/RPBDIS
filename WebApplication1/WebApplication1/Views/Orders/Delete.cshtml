@model CourseWork.Models.Order

@{
    ViewData["Title"] = "Удаление заказа";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить запись?</h3>
<div>
    <h4>Заказ</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            Начало работ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            Завершение работ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FinishDate)
        </dd>
        <dt class="col-sm-2">
            Статус завершения работ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComplectionStatus)
        </dd>
        <dt class="col-sm-2">
            Статус оплаты заказа
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PayStatus)
        </dd>
       
        <dt class="col-sm-2">
            Заказчик
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Customer.Surname)
        </dd>
        <dt class="col-sm-2">
            Бригада
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            Тип работы
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TypeOfWork.WorkName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OrderId" />
        <input type="submit" value="Удалить"  class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </form>
</div>

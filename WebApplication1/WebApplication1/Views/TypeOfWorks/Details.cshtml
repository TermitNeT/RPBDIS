@model CourseWork.Models.TypeOfWork

@{
    ViewData["Title"] = "Детали вида работы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Детали</h1>

<div>
    <h4>Вид работы</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название работы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkName)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Стоимость
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TypeOfWorkId" class="btn btn-primary" >Редактировать</a> |
    <a asp-action="Index" class="btn btn-primary" >Назад</a>
</div>

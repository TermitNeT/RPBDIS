@model CourseWork.Models.TypeOfWork

@{
    ViewData["Title"] = "Удаление вида работы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Вид работы</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название работы
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.WorkName)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TypeOfWorkId" />
        <input type="submit" value="Удалить" class="btn btn-primary"/> |
        <a asp-action="Index" class="btn btn-primary" >Назад</a>
    </form>

</div>

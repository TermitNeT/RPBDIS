@model CourseWork.Models.Material

@{
    ViewData["Title"] = "Удаление материала";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Материал</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название материала
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MaterialName)
        </dd>
        <dt class = "col-sm-2">
            Описание
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
           Цена
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaterialId" />
        <input type="submit" value="Удалить" class="btn btn-primary"  /> |
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </form>
</div>

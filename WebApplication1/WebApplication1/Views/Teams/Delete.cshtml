@model CourseWork.Models.Team

@{
    ViewData["Title"] = "Удаление бригады";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить запись?</h3>
<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Название бригады
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeamName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamId" />
        <input type="submit" value="Удалить" class="btn btn-primary"/> |
        <a asp-action="Index" class="btn btn-primary">Назад</a>
    </form>
</div>
